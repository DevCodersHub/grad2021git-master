@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    List<string> branchNames = new();
    List<string> levelNames = new();
    foreach(Branch branch in Model.Branches) { branchNames.Add(branch.BranchName); }
    foreach(Level level in Model.LevelList) { levelNames.Add(level.LevelName); }
}



<div class="row align-items-center justify-content-center">
    <div class="col-md-7 py-5">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>اضافه عضو جديد</h4>
           
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">

                <div class="col-md-4">
                </div>

                <div class="col-md-8">
                    <div class="form-group first">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group first">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="row">

                <div class="col-md-4">
                </div>

                <div class="col-md-8">
                    <div class="form-group first">

                        <label asp-for="Input.NatId"></label>
                        <input asp-for="Input.NatId" class="form-control" />
                        <span asp-validation-for="Input.NatId" class="text-danger"></span>

                    </div>
                </div>

            </div>




            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.BirthPlace"></label>
                        <input asp-for="Input.BirthPlace" class="form-control" />
                        <span asp-validation-for="Input.BirthPlace" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group first">
                        <label asp-for="Input.BirthDate"></label>
                        <input asp-for="Input.BirthDate" class="form-control" />
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">

                <div class="col-md-8">
                </div>

                <div class="col-md-4">
                    <div class="form-group first">
                        <label asp-for="Input.Gender"></label>
                        @Html.DropDownListFor(model => model.Input.Gender,
                                                                    new SelectList(Enum.GetValues(typeof(Gender))), new { @class = "form-control" })
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>

                    </div>
                </div>

            </div>


            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.SeatNo"></label>
                        <input asp-for="Input.SeatNo" class="form-control" />
                        <span asp-validation-for="Input.SeatNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group first">
                        <label asp-for="Input.EnrollmentDate"></label>
                        <input asp-for="Input.EnrollmentDate" class="form-control" />
                        <span asp-validation-for="Input.EnrollmentDate" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.LevelName"></label>
                        @Html.DropDownListFor(model => model.Input.LevelName,
                                                                    new SelectList(levelNames), new { @class = "form-control" })
                        <span asp-validation-for="Input.LevelName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group first">
                        <label asp-for="Input.BranchName"></label>
                        @Html.DropDownListFor(model => model.Input.BranchName,
                                                                    new SelectList(branchNames), new { @class = "form-control" })
                        <span asp-validation-for="Input.BranchName" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">

                <div class="col-md-4">
                </div>

                <div class="col-md-8">
                    <div class="form-group first">
                        <label asp-for="Input.AcademicYearID"></label>
                        <input asp-for="Input.AcademicYearID" class="form-control" />
                        <span asp-validation-for="Input.AcademicYearID" class="text-danger"></span>
                    </div>
                </div>

            </div>
            
            <button type="submit" class="btn btn-danger">تسجيل</button>
        </form>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
